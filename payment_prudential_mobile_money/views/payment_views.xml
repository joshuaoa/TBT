<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Prudential Momo Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="acquirer"]' position='inside'>
                <group attrs="{'invisible': [('provider', '!=', 'prudentialmomo')]}">
                    <field name="momo_username"
                           attrs="{'required':[('provider', '=', 'prudentialmomo'), ('state', '!=', 'disabled')], 'invisible': [('state', '=', 'disabled')]}"/>
                    <field name="momo_password"
                           attrs="{'required':[('provider', '=', 'prudentialmomo'), ('state', '!=', 'disabled')], 'invisible': [('state', '=', 'disabled')]}" password="1"/>
                    <field name="prudentialmomo_client_id"
                           attrs="{'required':[('provider', '=', 'prudentialmomo'), ('state', '!=', 'disabled')], 'invisible': [('state', '=', 'disabled')]}"/>
                    <field name="base_url"
                           attrs="{'required':[('provider', '=', 'prudentialmomo'), ('state', '!=', 'disabled')], 'invisible': [('state', '=', 'disabled')]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>